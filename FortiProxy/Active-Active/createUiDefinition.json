      {
        "name": "networking",
        "label": "Networking",
        "subLabel": {
          "preValidation": "Configure internal networking",
          "postValidation": "Done"
        },
        "elements": [
          {
            "name": "virtualnetworksection",
            "type": "Microsoft.Common.Section",
            "label": "Configure Internal Networking",
            "elements": [
              {
                "name": "virtualnetworktext",
                "type": "Microsoft.Common.TextBlock",
                "visible": true,
                "options": {
                  "text": "Create a new or select an existing virtual network with the required subnets. The internal subnet is a transit subnet containing only the FortiProxy interfaces. Servers can be installed in a protected subnet with user defined routing configuration."
                }
              },
              {
                "name": "virtualnetwork",
                "type": "Microsoft.Network.VirtualNetworkCombo",
                "label": {
                  "virtualNetwork": "Virtual network",
                  "subnets": "Subnets"
                },
                "toolTip": {
                  "virtualNetwork": "Virtual Network for deployment of the FortiProxy VM solution",
                  "subnets": "Standard deployment is to have external and internal subnets."
                },
                "defaultValue": {
                  "name": "[if(equals(basics('fortiProxyNamePrefix'),''),'fortiproxy-vnet',concat(basics('fortiProxyNamePrefix'),'-vnet'))]",
                  "addressPrefixSize": "/22"
                },
                "constraints": {
                  "minAddressPrefixSize": "/29"
                },
                "options": {
                  "hideExisting": false
                },
                "subnets": {
                  "subnet1": {
                    "label": "FortiProxy Subnet",
                    "defaultValue": {
                      "name": "fpxsubnet",
                      "addressPrefixSize": "/28"
                    },
                    "constraints": {
                      "minAddressPrefixSize": "/29",
                      "minAddressCount": "[add(int(basics('fortiProxyCount')),1)]",
                      "requireContiguousAddresses": true
                    }
                  },
                  "subnet2": {
                    "label": "High Availability subnet",
                    "defaultValue": {
                      "name": "fpxhasubnet",
                      "addressPrefixSize": "/28"
                    },
                    "constraints": {
                      "minAddressPrefixSize": "/29",
                      "minAddressCount": "[int(basics('fortiProxyCount'))]",
                      "requireContiguousAddresses": true
                    }
                  }
                },
                "visible": true
              },
              {
                "name": "virtualnetworkinfo",
                "type": "Microsoft.Common.InfoBox",
                "visible": true,
                "options": {
                  "icon": "Info",
                  "text": "The internal subnet is a transit subnet containing only the FortiProxy interfaces for traffic to and from the internal networks. Internal systems should be installed in a protected subnet with user defined route configuration.",
                  "uri": "https://github.com/fortinet/azure-templates/tree/main/FortiProxy/Active-Active-ELB-ILB"
                }
              }
            ]
          },
          {
            "name": "acceleratednetworksection",
            "type": "Microsoft.Common.Section",
            "label": "Accelerated networking",
            "elements": [
              {
                "name": "acceleratednetworkingtext",
                "type": "Microsoft.Common.TextBlock",
                "visible": true,
                "options": {
                  "text": "Enables SR-IOV support allowing direct acces from the NIC in the Azure infrastructure to the FortiProxy VM.",
                  "link": {
                    "label": "Learn more",
                    "uri": "https://docs.fortinet.com/document/fortigate-public-cloud/7.2.0/azure-administration-guide/651644/enabling-accelerated-networking-on-the-fortigate-vm"
                  }
                }
              },
              {
                "name": "acceleratednetworking",
                "type": "Microsoft.Common.OptionsGroup",
                "label": "Accelerated Networking",
                "defaultValue": "Enabled",
                "toolTip": "Accelerated Networking enables direct connection between the VM and network card. Only available on 2 CPU F/Fs and 4 CPU D/Dsv2, D/Dsv3, E/Esv3, Fsv2, Lsv2, Ms/Mms and Ms/Mmsv2",
                "constraints": {
                  "required": false,
                  "allowedValues": [
                    {
                      "label": "Enabled",
                      "value": "true"
                    },
                    {
                      "label": "Disabled",
                      "value": "false"
                    }
                  ]
                },
                "visible": true
              },
              {
                "name": "acceleratednetworkinginfo",
                "type": "Microsoft.Common.InfoBox",
                "visible": true,
                "options": {
                  "icon": "Info",
                  "text": "Accelerated Networking is supported on most general purpose and compute-optimized instance sizes with 2 or more vCPUs. On instances that support hyperthreading, Accelerated Networking is supported on VM instances with 4 or more vCPUs. Deployment with the accelerated networking feature enabled on a host that doesn't support it will result in a failure to connect to it. The accelerated networking can be disabled after deployment from the Azure Portal or Azure CLI.",
                  "uri": "https://docs.microsoft.com/en-us/azure/virtual-machines/sizes"
                }
              }
            ]
          }
        ]
      },
      {
        "name": "publicip",
        "label": "Public IP",
        "subLabel": {
          "preValidation": "Configure public networking",
          "postValidation": "Done"
        },
        "elements": [
          {
            "name": "externalLoadBalancer",
            "type": "Microsoft.Common.Section",
            "label": "External Load Balancer",
            "elements": [
              {
                "name": "enabled",
                "type": "Microsoft.Common.OptionsGroup",
                "label": "Deploy ELB with external subnet",
                "defaultValue": "yes",
                "toolTip": "Deploys an external load balancer and external interface for each FortiProxy VM",
                "constraints": {
                  "allowedValues": [
                    {
                      "label": "yes",
                      "value": "true"
                    },
                    {
                      "label": "no",
                      "value": "false"
                    }
                  ],
                  "required": true
                },
                "visible": true
              },
              {
                "name": "info",
                "type": "Microsoft.Common.InfoBox",
                "visible": true,
                "options": {
                  "icon": "Info",
                  "text": "If no is selected an internal load balancer with an internal private IP is installed. The FortiProxy still required access to internet for license validation and retrieve proxied content."
                }
              }
            ]
          },
          {
            "name": "publiciptext",
            "type": "Microsoft.Common.TextBlock",
            "options": {
              "text": "The Load Balancer public IP will be used for public services hosted on the FortiProxy."
            },
            "visible": "[equals(steps('publicip').externalLoadBalancer.enabled,'true')]"
          },
          {
            "name": "publicip4internet",
            "type": "Microsoft.Network.PublicIpAddressCombo",
            "label": {
              "publicIpAddress": "Public IP address",
              "domainNameLabel": "Domain name label"
            },
            "toolTip": {
              "publicIpAddress": "Public IP attached ",
              "domainNameLabel": "DNS name linked to this public IP"
