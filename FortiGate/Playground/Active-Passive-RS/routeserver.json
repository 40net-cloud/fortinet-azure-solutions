{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "prefix": {
      "type": "string",
      "metadata": {
        "description": "Naming prefix for all deployed resources"
      }
    },
    "routeServerSubnetName": {
      "type": "string",
      "defaultValue": "routeserversubnet"
    },
    "routeServerVnetName": {
      "type": "string",
      "defaultValue": "routeservervnet"
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
    }
  },
  "variables": {
    "firstRouteServerName": "[concat(parameters('prefix'),'-RouteServer')]",
    "routeserverbgpconnectionname": "[concat(parameters('prefix'),'-RouteServer-BGP')]",
    "ipconfigName": "[concat(variables('firstRouteServerName'), '/ipconfig1')]",
    "bgpConnectionName": "[concat(variables('firstRouteServerName'), '/', variables('routeserverbgpconnectionname'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Network/virtualHubs",
      "apiVersion": "2020-06-01",
      "name": "[variables('firstRouteServerName')]",
      "location": "[parameters('location')]",
      "properties": {
        "sku": "Standard"
      }
    },
    {
      "type": "Microsoft.Network/virtualHubs/ipConfigurations",
      "apiVersion": "2020-06-01",
      "name": "[variables('ipconfigName')]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/virtualHubs', variables('firstRouteServerName'))]"
      ],
      "properties": {
        "privateIPAddress": "172.16.136.230",
        "subnet": {
          "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('routeServerVnetName'), parameters('routeServerSubnetName'))]"
        }
      }
    },
    {
      "type": "Microsoft.Network/virtualHubs/bgpConnections",
      "apiVersion": "2020-06-01",
      "name": "[variables('bgpConnectionName')]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/virtualHubs/ipConfigurations', variables('firstRouteServerName'), 'ipconfig1')]"
      ],
      "properties": {
        "peerAsn": 65005,
        "peerIp": "10.50.1.4"
      }
    }
  ],
  "outputs": {}
}