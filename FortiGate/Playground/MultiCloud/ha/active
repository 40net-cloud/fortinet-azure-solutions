config sys glo
set hostname active
end
config system interface
    edit port1
        set mode static
        set ip ${active_port1_ip}/${active_port1_mask}
        set allowaccess ping https ssh http fgfm
        set description "ext"
    next
    edit port2
        set mode static
        set ip ${active_port2_ip}/${active_port2_mask}
        set allowaccess ping https ssh http fgfm
        set description "int"
    next
    edit port3
        set mode static
        set ip ${active_port3_ip}/${active_port3_mask}
        set allowaccess ping https ssh http fgfm
        set description "sync"
    next
    edit port4
        set mode static
        set ip ${active_port4_ip}/${active_port4_mask}
        set allowaccess ping https ssh http fgfm
        set description "hamgmt"
    next
end
config system ha
    set group-name "group1"
    set mode a-p
    set hbdev "port3" 50
    set session-pickup enable
    set ha-mgmt-status enable
    config ha-mgmt-interfaces
        edit 1
            set interface "port4"
            set gateway ${hamgmt_gateway_ip}
        next
    end
    set override disable
    set priority 255
    set unicast-hb enable
    set unicast-hb-peerip ${passive_hb_ip}
    set unicast-hb-netmask ${hb_netmask}
end
config router static
    edit 1
       set device port1
       set gateway ${port1_gateway}
    next
    edit 2
       set device port2
       set dst ${vpc_cidr}
       set gateway ${port2_gateway}
    next
end
config system sdn-connector
    edit "gcp"
        set type gcp
        set ha-status enable
        config external-ip
            edit ${clusterip}
            next
        end
        config route
            edit ${internalroute}
            next
        end
    next
end
config firewall vip
    edit "vm"
        set extip 0.0.0.0
        set mappedip "172.16.100.2"
        set extintf "port1"
        set portforward enable
        set extport 8022
        set mappedport 22
    next
end
config firewall policy
    edit 1
        set name "InboundSSH"
        set srcintf "port1"
        set dstintf "port2"
        set srcaddr "all"
        set dstaddr "vm"
        set action accept
        set schedule "always"
        set service "SSH"
        set logtraffic all
        set logtraffic-start enable
    next
    edit 2
        set name "Ooutbound"
        set srcintf "port2"
        set dstintf "port1"
        set srcaddr "all"
        set dstaddr "all"
        set action accept
        set schedule "always"
        set service "ALL"
        set logtraffic all
        set logtraffic-start enable
        set nat enable
    end
end

