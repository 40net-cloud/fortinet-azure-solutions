                    "Standard_DS5_v2",
                    "Standard_D4_v3",
                    "Standard_D8_v3",
                    "Standard_D16_v3",
                    "Standard_D4s_v3",
                    "Standard_D8s_v3",
                    "Standard_D16s_v3",
                    "Standard_D4a_v4",
                    "Standard_D8a_v4",
                    "Standard_D16a_v4",
